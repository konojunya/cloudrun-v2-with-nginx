{
  "extends": "gts/tsconfig-google.json",
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": false,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["es2019"],
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@*": ["./*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
